def number_is_prime_or_not():
    if num > 1:
        for i in range(2,num):
            if(num % i == 0):
                print(num, " is not a prime number")
                
            else:
                print(num, " is a prime number")
            break
    else:
        print(num, " is not a prime number")      
        
"""Code Started ----------Exercise 1: Prime Numbers--------------------------
---------------------------------------------------------------------------"""

